<manifest package="com.waliahimanshu.demo.ui"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.waliahimanshu.demo.DemoApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:label="@string/home_activity_label"
            android:name="com.waliahimanshu.demo.ui.home.RecipesEntryActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="@string/title_item_detail"
            android:name="com.waliahimanshu.demo.ui.home.ItemDetailActivity"
            android:parentActivityName="com.waliahimanshu.demo.ui.home.RecipesEntryActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.waliahimanshu.demo.ui.home.RecipesEntryActivity" />
        </activity>

    </application>
</manifest>
